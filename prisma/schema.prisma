generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

generator jsonSchema {
  provider = "prisma-json-schema-generator"
  output   = "./generated/json"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = "postgresql://postgres:0100@localhost:5432/wizard_generator"
}

model User {
  id            Int       @id @default(autoincrement())
  username      String
  email         String
  password_hash String
  created_at    DateTime  @default(now())
  updated_at    DateTime? @updatedAt

  @@map("users")
}

enum Color {
  RED
  GREEN
  BLUE
}

model Client {
  id         Int       @id @default(autoincrement())
  name       String
  email      String
  phone      String
  created_at DateTime  @default(now())
  updated_at DateTime? @updatedAt

  @@map("clients")
}

model Example {
  id            Int      @id @default(autoincrement())
  stringField   String
  intField      Int
  floatField    Float
  booleanField  Boolean
  dateTimeField DateTime @default(now())
  jsonField     Json
  bytesField    Bytes
  decimalField  Decimal
  bigintField   BigInt
  color         Color    @default(RED)
  optionalField String?
  relatedId     Int
  related       Related  @relation(fields: [relatedId], references: [id])
}

model Related {
  id       Int       @id @default(autoincrement())
  name     String
  examples Example[]
}
